<table class="table">
  <tbody>
    <tr>
      <th>Share Link</th>
      <td>
      <%= render 'layouts/copy_to_clipboard', copytext: team_url(@team.slug), copycta: 'Copy Team URL' %>
      </td>
    </tr>

    <tr>
      <th>Title</th>
      <td><%= team.title %></td>
    </tr>

    <tr>
      <th>Description</th>
      <td><%= markdown(team.description) %></td>
    </tr>

    <tr>
      <th>Website</th>
      <td><%= team.website %></td>
    </tr>

    <tr>
      <th>Created</th>
      <td>
        <%= team.created_at.strftime('%e %b %Y %H:%M:%S') %>
      </td>
    </tr>

    <tr>
      <th>Users</th>
      <td>
        <%= team.users.size %>
        -
        <%= link_to 'view users in the team', admin_users_path(team: team.hashid) %>
      </td>
    </tr>
  </tbody>
</table>
