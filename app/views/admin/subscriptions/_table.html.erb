<table class="table">
  <thead>
    <tr>
      <th>Subscription ID</th>
      <th>User</th>
      <th>Tile</th>
      <th>Stripe ID</th>
      <th>Stripe<br>Status</th>
      <th>Created</th>
    </tr>
  </thead>

  <tbody>
    <% subscriptions.each do |subscription| %>
      <tr>
        <td><%= link_to subscription.hashid, admin_subscription_path(subscription) %></td>
        <td>
          <%= link_to subscription.user.hashid, admin_user_path(subscription.user) %>
          (<%= subscription.user.email %>)
        </td>
        <td><%= link_to subscription.tile.w3w, admin_tile_path(subscription.tile) %></td>
        <td>
          <%= link_to subscription.stripe_id,
                        "#{ENV.fetch('STRIPE_DASHBOARD_URL')}/subscriptions/#{subscription.stripe_id}" %>
        </td>
        <td><%= subscription.stripe_status || 'Not set' %></td>
        <td><%= subscription.created_at.strftime('%e %b %Y %H:%M:%S') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
