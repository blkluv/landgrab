<table class="table">
  <thead>
    <tr>
      <th>Promo Code ID</th>
      <th>Code</th>
      <th>Stripe ID</th>
      <th>Created</th>
    </tr>
  </thead>

  <tbody>
    <% promo_codes.each do |promo_code| %>
      <tr>
        <td><%= promo_code.hashid %></td>
        <td>
          <%= content_tag(:code, promo_code.code) %>
        </td>
        <td>
          <%= link_to promo_code.stripe_id,
                        "#{ENV.fetch('STRIPE_DASHBOARD_URL')}/promotion_codes/#{promo_code.stripe_id}" %>
        </td>
        <td><%= promo_code.created_at.strftime('%e %b %Y %H:%M:%S') %></td>
      </tr>
    <% end %>
  </tbody>
</table>
