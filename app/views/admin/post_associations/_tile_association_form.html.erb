<%= form_with(model: [:admin, post_association], class: 'row row-cols-lg-auto mb-3 g-3 align-items-center') do |form| %>
  <%= form.hidden_field :post_id, { value: form.object.post.hashid } %>
  <%= form.hidden_field :postable_type, { value: Tile.to_s } %>

  <div class="col-12 g-3 align-items-center">
    <%= form.text_field :postable_id,
                        required: true,
                        value: form.object.postable&.hashid,
                        class: 'form-control' %>
  </div>

  <div class="col-12">
    <%= form.submit 'Associate Tile', class: 'btn btn-primary' %>
  </div>

  <div class="col-12">
    or
  </div>

  <div class="col-12">
    <%= link_to 'Select tiles from a map',
                bulk_association_edit_admin_post_path(@post),
                class: 'btn btn-secondary' %>
  </div>
<% end %>
