<h1><%= admin_title @project %></h1>

<table class="table">
  <tbody>
    <tr>
      <th>Title</th>
      <td><%= @project.title %></td>
    </tr>

    <tr>
      <th>Description</th>
      <td><%= markdown(@project.description) %></td>
    </tr>

    <tr>
      <th>Website</th>
      <td>
        <% if @project.website.present? %>
          <%= link_to @project.website, @project.website %>
        <% else %>
          -
        <% end %>
      </td>
    </tr>

    <tr>
      <th>Hero Image</th>
      <td><%= image_tag @project.hero_image_url, height: '150px' %></td>
    </tr>

    <tr>
      <th>Logo</th>
      <td><%= image_tag @project.logo_url, height: '100px' %></td>
    </tr>

    <tr>
      <th>Created</th>
      <td>
        <%= @project.created_at.strftime('%e %b %Y %H:%M:%S') %>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <%= link_to 'Edit project', edit_admin_project_path(@project) %>
</p>

<h2>Plots in this Project</h2>
<%= render 'admin/plots/table', plots: @project.plots %>

<h2>Posts about this Project</h2>
<%= render 'admin/posts/table', posts: @project.posts %>
