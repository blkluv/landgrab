<table class="table">
  <tbody>
    <tr>
      <th>Title</th>
      <td><%= post.title %></td>
    </tr>

    <tr>
      <th>Preview</th>
      <td><%= markdown(post.preview) %></td>
    </tr>

    <tr>
      <th>Body</th>
      <td><%= markdown(linkify_tiles(post.body)) %></td>
    </tr>

    <tr>
      <th>Author</th>
      <td><%= link_to post.author.full_name, admin_user_path(post.author) %></td>
    </tr>

    <tr>
      <th>Comments</th>
      <td>
        <%= post.comments.size %>
        -
        <%= link_to 'view', admin_comments_path(post: post.hashid) %>
      </td>
    </tr>

    <tr>
      <th>Created</th>
      <td>
        <%= post.created_at.strftime('%e %b %Y %H:%M:%S') %>
      </td>
    </tr>
  </tbody>
</table>
