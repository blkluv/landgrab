<h1><%= title 'Change your password' %></h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="mb-3">
    <%= f.label :password, 'New password', class: 'form-label' %>
    <%= f.password_field :password, autofocus: true, autocomplete: 'new-password', required: true, class: 'form-control', aria: { describedby: 'passwordHelp' } %>
    <% if @minimum_password_length %>
      <div id="passwordHelp" class="form-text">
        (<%= @minimum_password_length %> characters minimum)
      </div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= f.label :password_confirmation, 'Confirm new password', class: 'form-label' %>
    <%= f.password_field :password_confirmation, autocomplete: 'new-password', required: true, class: 'form-control' %>
  </div>

  <%= f.submit 'Change my password', class: 'btn btn-primary' %>
<% end %>

<%= render "devise/shared/links" %>
