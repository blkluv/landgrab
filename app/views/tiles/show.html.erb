<h1><%= title @tile.w3w %></h1>

<div class="row">
  <div class="col-md-6">
    <%= render 'details', tile: @tile %>
    <%= render 'subscription_info', tile: @tile %>
    <%= render 'posts', tile: @tile %>
  </div>
  <div class="col-md-6">
    <%= render 'static_pages/w3w_map',
        tiles: @tile.plot&.tiles_for_map(include_tile: @tile) || [@tile],
        plot: @tile.plot,
        popup_tiles: [@tile] %>
  </div>
</div>
