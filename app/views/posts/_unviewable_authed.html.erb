
<% available_tiles = Tile.where(id: post.associated_tiles.map(&:id)).includes(:latest_subscription).select(&:available?) %>
<% available_tiles = Tile.joins(:plot).where(plot: post.associated_plots).includes(:latest_subscription).select(&:available?) if available_tiles.empty? %>
<% available_tiles = Tile.joins(plot: :project).where(plot: { project: post.associated_projects }).includes(:latest_subscription).select(&:available?) if available_tiles.empty? %>

<% if available_tiles.any? %>
  <%= bootstrap_alert 'You need to be subscribed to an associated tile before you can view this post!' %>
  <%= render 'tiles/subscription_info', tile: available_tiles.sample %>
<% else %>
  <%= bootstrap_alert "There are no available tiles associated with this post so you can't subscribe right now!" %>
<% end %>
