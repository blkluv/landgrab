<h1><%= title @post.title %></h1>

<%= render 'header', post: @post %>

<div class="row">
  <div class="col-md-8">
    <% if user_signed_in? %>
      <% if @viewable %>
        <%= markdown(linkify_tiles(@post.body)) %>
      <% else %>
        <%= render 'unviewable_authed', post: @post %>
      <% end %>
    <% else %>
      <%= render 'unviewable_unauthed' %>
    <% end %>
  </div>
  <div class="col-md-4">
    <%= render 'associations', post: @post %>
  </div>
</div>

