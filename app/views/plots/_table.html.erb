<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Polygon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plots.each do |plot| %>
      <tr>
        <td><%= plot.title %></td>
        <td><%= plot.polygon.coordinates[0] %></td>
        <td><%= link_to 'Show', plot %></td>
      </tr>
    <% end %>
  </tbody>
</table>
